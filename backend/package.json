{
    "name": "backend",
    "version": "1.0.0",
    "description": "backend is the ultimate backend solution",
    "author": "Nikhil Bindal",
    "main": "src/server.ts",
    "scripts": {
        "setup": "npm install && npm update",
        "tsc": "tsc",
        "build": "tsc",
        "start": "node -r tsconfig-paths/register ./build/src/server.js",
        "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register ./src/server.ts",
        "watch-ts": "tsc --watch",
        "watch-node": "nodemon --watch 'src/**/*.ts' --exec 'ts-node -r tsconfig-paths/register' ./src/server.ts",
        "prod": "npm run build && npm run start"
    },
    "keywords": [],
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "concurrently": "^8.2.2",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.17.1",
        "express-custom-error": "^1.8.4",
        "express-validator": "^7.0.1",
        "has-keys": "^0.1.0",
        "helmet": "^3.21.2",
        "http-status": "^1.3.2",
        "jsonwebtoken": "^9.0.2",
        "mandatoryenv": "^1.1.1",
        "module-alias": "^2.2.2",
        "mongodb": "^3.3.3",
        "mongoose": "^8.2.1",
        "morgan": "^1.9.1",
        "openai": "^4.83.0",
        "rotating-file-stream": "^1.4.6",
        "ts-node-dev": "^1.0.0-pre.43"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/helmet": "^4.0.0",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.11.24",
        "nodemon": "^3.1.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    }
}
